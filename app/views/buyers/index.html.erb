<%= render 'filter_form', q: @q, url: request.path %>
<div class="container my-5">
  <div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title font-weight-bold">Покупатели</h3>
      <%= link_to 'Добавить новый', new_buyer_path, class: "btn btn-success min-width-btn" %>
    </div>

    <div class="card-body">
      <table class="table table-hover table-bordered table-striped">
        <thead>
          <tr>
            <th><%= sort_link q, :id, 'ID' %></th>
            <th><%= sort_link q, :name, 'имя' %></th>
            <th><%= sort_link q, :phone_number, 'номер телефона' %></th>
            <th><%= sort_link q, :comment, 'Коммент' %></th>
            <th><%= sort_link q, :created_at, 'created at' %></th>
          </tr>
        </thead>
        <tbody>
          <% @buyers.each do |buyer| %>
            <tr class="<%= active_tr(buyer.active) %>">
              <td><%= buyer.id %></td>
              <td><%= buyer.name %></td>
              <td><%= buyer.phone_number %></td>
              <td><%= buyer.comment %></td>
              <td><%= strf_datetime(buyer.created_at) %></td>
              <td><%= clink_to 'Редактировать', edit_buyer_path(buyer), 'fa-edit' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= paginate @buyers %>
  </div>
</div>
