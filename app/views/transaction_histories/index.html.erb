<div class="container my-5">
  <div class="card shadow-lg">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title font-weight-bold">История платежей</h3>
    </div>

    <div class="card-body">
      <%= render 'transaction_histories', transaction_histories: @transaction_histories %>
      <%= paginate @transaction_histories %>
      <table>
        <thead>
          <tr>
            <th>Итого</th>
            <th><%= number_to_currency @all_transaction_histories.sum(:price) %></th>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>
