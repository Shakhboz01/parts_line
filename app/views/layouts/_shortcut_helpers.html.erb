<!-- Button trigger modal -->
<button accesskey='1' style='display: none' type="button" class="btn btn-primary" data-toggle="modal" data-target="#productModal">
  create a product
</button>

<button accesskey='0' style='display: none' type="button" class="btn btn-primary" data-toggle="modal" data-target="#expenditureModal">
  create an expenditure
</button>

<%= button_to default_create_sale_from_services_path, style: 'display: none', accesskey: '4', method: :post do %>
  <span>Обьект</span>
<% end %>

<%= link_to new_product_entry_path(local_entry: true), style:'display:none', accesskey: '9' do %>
  <span>Приход от производство</span>
<% end %>

<%= button_to default_create_sales_path, style: 'display: none', accesskey: '3', method: :post do %>
  <span>продажа</span>
<% end %>

<%= button_to default_create_sale_from_local_services_path, style: 'display: none', accesskey: '2', method: :post do %>
  <span>услуга</span>
<% end %>

<%= button_to default_create_delivery_from_counterparties_path, style: 'display: none', accesskey: '8', method: :post do %>
  <span>Приход от поставщика</span>
<% end %>
<!-- Modal -->
<div class="modal fade" id="productModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'products/form', product: Product.new %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="expenditureModal" tabindex="-1" role="dialog" aria-labelledby="expenditureModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'expenditures/form', expenditure: Expenditure.new %>
      </div>
    </div>
  </div>
</div>
