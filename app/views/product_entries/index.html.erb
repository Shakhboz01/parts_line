<div class="card shadow">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3 class="card-title font-weight-bold">Product Entries</h3>
    <%= link_to 'Добавить новый', new_product_entry_path, class: "btn btn-success min-width-btn" %>
  </div>
  <%= render 'filter_form', q: @q, url: request.path %>
  <div class="card-body">
    <table class="table table-hover table-bordered table-striped">
      <thead>
        <tr>
          <th><%= sort_link @q, :id, 'ID' %></th>
          <th><%= sort_link @q, :local_entry, 'local_entry' %></th>
          <th><%= sort_link @q, :buy_price, 'buy_price' %></th>
          <th><%= sort_link @q, :sell_price, 'sell_price' %></th>
          <th>
            <%= sort_link @q, :service_price, 'service_price' %>
            <i title='add comment' class="fa-solid fa-circle-info"></i>
          </th>
          <th>Provider</th>
          <th>Product</th>
          <th><%= sort_link @q, :amount, 'amount' %></th>
          <th><%= sort_link @q, :amount_sold, 'Amount sold' %></th>
          <th><%= sort_link @q, :total_paid, 'total paid' %></th>
          <th><%= sort_link @q, :total_price, 'total price' %></th>
          <th><%= sort_link @q, :comment, 'comment' %></th>
          <th>
            <%= sort_link @q, :return, 'Return' %>
            <i title='add comment' class="fa-solid fa-circle-info"></i>
          </th>
          <th><%= sort_link @q, :created_at, 'Created at' %></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @product_entries.each do |product_entry| %>
          <tr>
            <td><%= product_entry.id %></td>
            <td><%= active_check(product_entry.local_entry) %></td>
            <td><%= number_to_currency(product_entry.buy_price) %></td>
            <td><%= number_to_currency(product_entry.sell_price) %></td>
            <td><%= number_to_currency(product_entry.service_price) %></td>
            <td><%= product_entry&.provider&.name %></td>
            <td><%= product_entry.product.name %></td>
            <td><%= number_to_currency(product_entry.amount) %></td>
            <td><%= product_entry.amount_sold %></td>
            <td><%= number_to_currency(product_entry.total_paid) %></td>
            <td><%= number_to_currency(product_entry.total_price) %></td>
            <td><%= product_entry.comment %></td>
            <td><%= active_check(product_entry.return) %></td>
            <td><%= strf_datetime(product_entry.created_at) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @product_entries %>
</div>
