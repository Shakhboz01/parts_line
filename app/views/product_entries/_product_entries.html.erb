<table class="table table-hover table-bordered table-striped">
  <thead>
    <tr>
      <th><%= sort_link q, :id, 'ID' %></th>
      <th><%= sort_link q, :local_entry, 'От производство' %></th>
      <th><%= sort_link q, :buy_price, 'Цена прихода' %></th>
      <th><%= sort_link q, :sell_price, 'Цена продажи' %></th>
      <th>
        <%= sort_link q, :service_price, 'Цена услуги' %>
        <i title='Цена продажи при оказании услуги или при обьекте' class="fa-solid fa-circle-info"></i>
      </th>
      <th>Товар</th>
      <th><%= sort_link q, :amount, 'Количество' %></th>
      <th><%= sort_link q, :amount_sold, 'Продано' %></th>
      <th>склад</th>
      <th><%= sort_link q, :comment, 'Коммент' %></th>
      <th>
        <%= sort_link q, :return, 'Возврат' %>
        <i title='При оформлении возврата, оно учитывается как приход' class="fa-solid fa-circle-info"></i>
      </th>
      <th><%= sort_link q, :created_at, 'Оформлено в' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% product_entries.each do |product_entry| %>
      <tr>
        <td><%= product_entry.id %></td>
        <td><%= active_check(product_entry.local_entry) %></td>
        <td><%= number_to_currency(product_entry.buy_price) %></td>
        <td><%= number_to_currency(product_entry.sell_price) %></td>
        <td><%= number_to_currency(product_entry.service_price) %></td>
        <td><%= product_entry.product.name %></td>
        <td><%= product_entry.amount %></td>
        <td><%= product_entry.amount_sold %></td>
        <td><%= product_entry.storage.name %></td>
        <td><%= product_entry.comment %></td>
        <td><%= active_check(product_entry.return) %></td>
        <td><%= strf_datetime(product_entry.created_at) %></td>
        <% if product_entry.combination_of_local_product %>
          <td><%= clink_to 'посмотреть', combination_of_local_product_path(product_entry.combination_of_local_product), 'fa-search' %></td>
        <% end %>
        <% if defined?(deletable) %>
          <td><%= cdlink_to 'Удалить', product_entry %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
