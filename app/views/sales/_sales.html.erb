<table class="table table-hover table-bordered table-striped">
  <thead>
    <tr>
      <% unless defined?(shrink) %>
        <td></td>
        <th>ID</th>
      <% end %>
      <th>Покупатель</th>
      <th>Итого цена</th>
      <th>Оплачено</th>
      <% unless defined?(shrink) %>
        <th>Тип оплаты</th>
        <th>Комментарие</th>
        <th>Оформлено в</th>
        <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% sales.each do |sale| %>
      <tr>
        <% unless defined?(shrink) %>
          <td><%= active_check(sale.closed?) %></td>
          <td class="<%= detect_danger_row(sale.total_price, sale.total_paid) %>"><%= sale.id %></td>
        <% end %>
        <td><%= sale.buyer.name %></td>
        <td><%= number_to_currency sale.total_price %></td>
        <td><%= number_to_currency sale.total_paid %></td>
        <% unless defined?(shrink) %>
          <td><%= sale.payment_type %></td>
          <td><%= sale.comment %></td>
          <td><%= strf_datetime sale.created_at %></td>
        <% end %>
        <td>
          <%= clink_to 'Посмотреть', sale_path(sale), 'fa-search' %>
          <% if sale.closed? %>
            <%= render 'sales/sale_transaction', sale: sale %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
