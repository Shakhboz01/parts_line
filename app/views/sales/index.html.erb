<div class="container my-5">
  <div class="card shadow-lg">
    <div class="card-header d-flex justify-content-between align-items-center">
      <div class="btn-group" role="group" aria-label="Basic example">
        <button type="button" class="btn btn-primary">продажв</button>
        <%= link_to 'Посмотреть детально', product_sells_path, class: 'btn btn-secondary' %>
      </div>
    </div>
    <div class="card-body">
      <%= render 'sale_from_local_services/filter_form', q: @q, url: request.path %>
      <%= render 'sales', sales: @sales %>
      <%= paginate @sales %>
      <table class='table-bordered'>
        <thead>
          <tr>
            <th></th>
            <th>Итого цена</th>
            <th>Итого оплачено</th>
            <th>Разница</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>В долларах </th>
            <td><%= number_to_currency @sales.price_in_usd.sum(:total_price) %></td>
            <td><%= number_to_currency @sales.price_in_usd.sum(:total_paid) %></td>
            <td><%= number_to_currency(@sales.price_in_usd.sum(:total_price) - @sales.price_in_usd.sum(:total_paid)) %></td>
          </tr>
          <tr>
            <th>В сумах </th>
            <td><%= num_to_usd(@sales.price_in_uzs.sum(:total_price)) %></td>
            <td><%= num_to_usd @sales.price_in_uzs.sum(:total_paid) %></td>
            <td><%= num_to_usd(@sales.price_in_uzs.sum(:total_price) - @sales.price_in_uzs.sum(:total_paid)) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
