<div class="container my-5">
  <div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title font-weight-bold">Sales</h3>
      <%= link_to 'Добавить новый', new_sale_path, class: "btn btn-success min-width-btn" %>
    </div>

    <div class="card-body">
      <table class="table table-hover table-bordered table-striped">
        <thead>
          <tr>
                        <th>Total paid</th>
                        <th>Payment type</th>
                        <th>Buyer</th>
                        <th>Total price</th>
                        <th>Comment</th>
                        <th>User</th>
                        <th>Status</th>
                        <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @sales.each do |sale| %>
            <tr>
                              <td><%= sale.total_paid %></td>
                              <td><%= sale.payment_type %></td>
                              <td><%= sale.buyer_id %></td>
                              <td><%= sale.total_price %></td>
                              <td><%= sale.comment %></td>
                              <td><%= sale.user_id %></td>
                              <td><%= sale.status %></td>
                            <td><%= clink_to 'Посмотреть', sale_path(sale), 'fa-search' %></td>
              <td><%= clink_to 'Редактировать', edit_sale_path(sale), 'fa-edit' %></td>
              <td><%= cdlink_to 'удалить', sale %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
