<div class="container my-5">
  <div class="card shadow-lg">
    <div class="card-header d-flex justify-content-between align-items-center">
      <div class="btn-group" role="group" aria-label="Basic example">
        <%= link_to 'Приход от поставщиков', delivery_from_counterparties_path, class: 'btn btn-secondary' %>
        <button type="button" class="btn btn-primary">Приход от производство</button>
        <%= link_to 'Детально', product_entries_path, class: 'btn btn-secondary' %>
      </div>
      <%= link_to 'Добавить новый', new_combination_of_local_product_path, class: "btn btn-success min-width-btn" %>
    </div>

    <div class="card-body">
      <table class="table table-hover table-bordered table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Status</th>
            <th>Comment</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @combination_of_local_products.each do |combination_of_local_product| %>
            <tr>
              <td><%= combination_of_local_product.id %></td>
              <td><%= combination_of_local_product.status %></td>
              <td><%= combination_of_local_product.comment %></td>
              <td><%= clink_to 'Посмотреть', combination_of_local_product_path(combination_of_local_product), 'fa-search' %></td>
              <td><%= clink_to 'Редактировать', edit_combination_of_local_product_path(combination_of_local_product), 'fa-edit' %></td>
              <td><%= cdlink_to 'удалить', combination_of_local_product %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
