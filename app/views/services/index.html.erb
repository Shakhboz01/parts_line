<div class="container my-5">
  <div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title font-weight-bold">Services</h3>
      <%= link_to 'Добавить новый', new_service_path, class: "btn btn-success min-width-btn" %>
    </div>

    <div class="card-body">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
                          <th>Name</th>
                          <th>Unit</th>
                          <th>Service price</th>
                          <th>Active</th>
                          <th>User</th>
                          <th>Team fee in percent</th>
                        <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @services.each do |service| %>
            <tr>
                              <td><%= service.name %></td>
                              <td><%= service.unit %></td>
                              <td><%= service.service_price %></td>
                              <td><%= service.active %></td>
                              <td><%= service.user_id %></td>
                              <td><%= service.team_fee_in_percent %></td>
                            <td><%= link_to 'Посмотреть', service_path(service), 'fa-search' %></td>
              <td><%= clink_to 'Редактировать', edit_service_path(service), 'fa-edit' %></td>
              <td><%= cdlink_to 'удалить', service %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
