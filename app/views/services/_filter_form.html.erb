<%= search_form_for @q, url: url, html: { class: 'form form-horizontal filter-form' } do |f| %>
  <div class="container card shadow">
    <div class="row">
      <div class="form-group col-xs-12 col-sm-4">
        <%= f.label :name_cont, 'Содержит название услуги:', class: 'control-label' %>
        <%= f.text_field :name_cont, class: 'form-control' %>
      </div>
      <div class="form-group col-xs-12 col-sm-4">
        <%= f.label :unit_eq, 'Единица измерения:', class: 'control-label' %>
        <%= f.select :unit_eq, Service.units.keys.map { |key| [Service.human_attribute_name("unit.#{key}"), key] }, { include_blank: true }, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-xs-12 col-sm-3">
        <%= f.label :active_true, 'Активно:', class: 'control-label' %>
        <%= f.check_box :active_true, {class: 'form-control'}, 1, nil %>
      </div>
    </div>

    <br>
    <div class="row">
      <div class="form-group col-xs-12 col-sm-6">
        <%= f.submit 'Фильтр', class: 'btn btn-primary' %>
        <%= link_to 'Очистить поиск', request.path, class: 'btn btn-default' %>
      </div>
    </div>
  </div>
<% end %>
<br>
