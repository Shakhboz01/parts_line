<div class="container my-5">
  <div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title font-weight-bold">Providers</h3>
      <%= link_to 'Добавить новый', new_provider_path, class: "btn btn-success min-width-btn" %>
    </div>

    <div class="card-body">
      <table class="table table-hover table-bordered table-striped">
        <thead>
          <tr>
            <th><%= sort_link q, :id, 'ID' %></th>
            <th><%= sort_link q, :name, 'name' %></th>
            <th><%= sort_link q, :phone_number, 'Phone number' %></th>
            <th><%= sort_link q, :comment, 'comment' %></th>
            <th><%= sort_link q, :created_at, 'created at' %></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% providers.each do |provider| %>
            <tr>
              <td><%= provider.id %></td>
              <td><%= provider.name %></td>
              <td><%= provider.phone_number %></td>
              <td><%= provider.comment %></td>
              <td><%= strf_datetime(provider.created_at) %></td>
              <%# <><%= clink_to 'Посмотреть', provider_path(provider), 'fa-search' %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= paginate providers %>
  </div>
</div>
