<% rate = CurrencyRate.where(finished_at: nil).last.rate %>

<%= simple_form_for(expenditure) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :combination_of_local_product, as: :hidden %>
    <%= f.input :paid_in_usd %>
    <%= f.input :price, as: :numeric, label: 'Сумма:' %>
    <%= f.input :total_paid %>
    <%= f.input :rate, input_html: { value: rate, disabled: true }, as: :numeric %>

    <% unless expenditure.combination_of_local_product %>
      <%= f.input :expenditure_type, collection: Expenditure.expenditure_types.keys.map { |unit| [Expenditure.human_attribute_name("unit.#{unit}"), unit] } %>
    <% end %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Завершить' %>
  </div>
<% end %>
