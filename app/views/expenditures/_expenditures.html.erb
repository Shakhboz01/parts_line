<div class="card-body">
  <table class="table table-hover table-bordered table-striped">
    <thead>
      <tr>
        <th></th>
        <th><%= number_to_currency(expenditures_data.sum(:price_in_usd)) %></th>
        <th><%= num_to_usd(expenditures_data.sum(:price_in_uzs)) %></th>
        <th></th>
        <th><%= num_to_usd(expenditures_data.sum(:total_paid)) %></th>
      </tr>
      <tr>
        <th>ID</th>
        <th>Price in usd</th>
        <th>Price in uzs</th>
        <th>Paid in usd</th>
        <th>Total paid</th>
        <th>expenditure Type</th>
        <th>created at</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% expenditures.each do |expenditure| %>
        <tr>
          <td><%= expenditure.id %></td>
          <td><%= number_to_currency(expenditure.price_in_usd) %></td>
          <td><%= num_to_usd(expenditure.price_in_uzs) %></td>
          <td><%= active_check(expenditure.paid_in_usd) %></td>
          <td><%= num_to_usd(expenditure.total_paid) %></td>
          <td><%= expenditure.expenditure_type %></td>
          <td><%= strf_datetime(expenditure.created_at) %></td>
          <td><%= clink_to 'Посмотреть', expenditure_path(expenditure), 'fa-search' %></td>
          <td><%= clink_to 'Редактировать', edit_expenditure_path(expenditure), 'fa-edit' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
