<div class='container'>
  <% unless @sale_from_local_service.closed? %>
    <%= render 'layouts/progress', value: '46' %>
    <%= render 'product_sells/form', product_sell: ProductSell.new(sale_from_local_service_id: @sale_from_local_service.id) %>
    <button  type="button" class="btn btn-primary" data-toggle="modal" data-target="#localServiceModal">
      Добавить услуги
    </button>
  <% end %>
  <br><br>

  <div class='row'>
    <div class='col-sm-12 col-md-7'>
      <% unless @product_sells.count.zero? %>
        <%= render 'product_sells/product_sells', product_sells: @product_sells %>
      <% end %>
    </div>
    <div class='col-sm-12 col-md-5'>
      <% unless @local_services.count.zero? %>
        <%= render 'local_services/local_services', local_services: @local_services %>
      <% end %>
    </div>
  </div>


  <% unless @sale_from_local_service.closed? %>
    <%= simple_form_for(@sale_from_local_service) do |f| %>
      <%= f.input :status, as: :hidden, input_html: { value: 1 } %>
      <div class="form-actions">
        <%= f.button :submit, 'Завершить операцию', class: 'btn-success', title:'После завершении вы не сможете добавить или удалить товаров' %>
      </div>
    <% end %>
  <% end %>
  <br>
  <div>
  <b>ИТОГО: <%= number_to_currency @sale_from_local_service.get_total_price %></b>
</div>
</div>

<div class="modal fade" id="localServiceModal" tabindex="-1" role="dialog" aria-labelledby="localServiceModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'local_services/form', local_service: LocalService.new(sale_from_local_service_id: @sale_from_local_service.id) %>
      </div>
    </div>
  </div>
</div>
