<div class='container'>
  <% unless @sale_from_local_service.closed? %>
    <%= render 'layouts/progress', value: '46' %>
    <%= render 'product_sells/form', product_sell: ProductSell.new(sale_from_local_service_id: @sale_from_local_service.id) %>
    <%= render 'local_services/form', local_service: LocalService.new(sale_from_local_service_id: @sale_from_local_service.id) %>
  <% end %>
  <br><br>

  <div class='row'>
    <div class='col-sm-12 col-md-7'>
      <% unless @product_sells.count.zero? %>
        <%= render 'product_sells/product_sells', product_sells: @product_sells %>
      <% end %>
    </div>
    <div class='col-sm-12 col-md-5'>
      <% unless @local_services.count.zero? %>
        <%= render 'local_services/local_services', local_services: @local_services %>
      <% end %>
    </div>
  </div><br><br><hr>
  <div><b>ИТОГО: <%= number_to_currency @sale_from_local_service.get_total_price %></b></div>
  <%= render 'form', sale_from_local_service: @sale_from_local_service %>
</div>
