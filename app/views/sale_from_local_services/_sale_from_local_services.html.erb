<table class="table table-hover table-bordered table-striped">
  <thead>
    <tr>
      <td></td>
      <th>ID</th>
      <th>Итого расход</th>
      <th>Итого цена</th>
      <th>Оплачено</th>
      <th>Покупатель</th>
      <th>Тип оплаты</th>
      <th>Комментарие</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% sale_from_local_services.each do |sale_from_local_service| %>
      <tr>
        <td><%= active_check(sale_from_local_service.closed?) %></td>
        <td><%= sale_from_local_service.id %></td>
        <td><%= sale_from_local_service.total_expenditure %></td>
        <td><%= sale_from_local_service.total_price %></td>
        <td><%= sale_from_local_service.total_paid %></td>
        <td><%= sale_from_local_service.buyer.name %></td>
        <td><%= sale_from_local_service.payment_type %></td>
        <td><%= sale_from_local_service.coment %></td>
        <td><%= clink_to 'Посмотреть', sale_from_local_service_path(sale_from_local_service), 'fa-search' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
