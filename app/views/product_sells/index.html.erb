<div class="container my-5">
  <div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title font-weight-bold">Продажа товаров</h3>
    </div>

    <div class="card-body">
      <%= render 'filter_form', q: @q, url: request.path %>
      <%= render 'product_sells', product_sells: @product_sells %>
      <%= paginate @product_sells %>
       <table class='table-bordered'>
        <thead>
          <tr>
            <th>Итого количество</th>
            <th>Итого цена</th>
            <th>Итого доход</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= number_to_currency(@all_product_sells.sum(:sell_price)) %></td>
            <td><%= number_to_currency @all_product_sells.sum(:buy_price) %></td>
            <td><%= number_to_currency @all_product_sells.sum(:total_profit) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
