
<%= simple_form_for(@product_sell) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :combination_of_local_product %>
    <%= f.association :product %>
    <%= f.input :sell_price_in_usd %>
    <%= f.input :sell_price_in_uzs %>
    <%= f.input :buy_price_in_usd %>
    <%= f.input :buy_price_in_uzs %>
    <%= f.input :total_profit_in_usd %>
    <%= f.input :total_profit_in_uzs %>
    <%= f.input :paid_in_usd %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Завершить' %>
  </div>
<% end %>
