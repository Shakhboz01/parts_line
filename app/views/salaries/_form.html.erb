<%= simple_form_for(@salary) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :team, label: 'Выберить из бригад:' %>
    <%= f.association :user, label: 'или выберите из работников:' %>
    <%= f.input :month, label: 'Укажите год и месяц:' %>
    <%= f.input :paid_in_usd , label: 'Оплачен с $' %>
    <%= f.input :price, as: :numeric, label: 'Сумма:' %>
    <%= f.input :prepayment , label: 'Аванс' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Завершить' %>
  </div>
<% end %>
