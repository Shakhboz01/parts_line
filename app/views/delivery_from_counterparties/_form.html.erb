<%= simple_form_for(@delivery_from_counterparty) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :total_price, label: 'Итого цена', input_html: { disabled: true } %>
    <%= f.input :total_paid, label: 'Итого оплачено в $', input_html: {value: 0, placeholder: 'Пропустите этот поле если вы оплатили полностью'} %>
    <%= f.association :provider, label: 'Поставщик', collection: Provider.active.order(weight: :desc), include_blank: false %>
    <%= f.input :payment_type, label: 'Тип оплаты', collection: DeliveryFromCounterparty.payment_types.keys.map { |unit| [DeliveryFromCounterparty.human_attribute_name("unit.#{unit}"), unit] }, include_blank: false %>
    <%= f.input :comment, label: 'Комментарии' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Завершить' %>
  </div>
<% end %>
