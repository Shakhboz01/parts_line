<div class="container my-5">
  <div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title font-weight-bold">
        Приход от поставщиков
        <%= clink_to 'Изменить вид', product_entries_path, 'fa-eye' %>
        <%= clink_to 'Приход от производство', combination_of_local_products_path, 'fa-arrow-right' %>
      </h3>
      <%= link_to 'Добавить новый', new_delivery_from_counterparty_path, class: "btn btn-success min-width-btn" %>
    </div>

    <%= render 'filter_form', q: @q, url: request.path %>
    <div class="card-body">
      <%= render 'delivery_from_counterparties', delivery_from_counterparties: @delivery_from_counterparties %>
      <%= paginate @delivery_from_counterparties %>

      <table class='table-bordered'>
        <thead>
          <tr>
            <th>Итого цена</th>
            <th>Итого оплачено</th>
            <th>Разница</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= number_to_currency(@all_delivery_from_counterparties.sum(:total_price)) %></td>
            <td><%= number_to_currency @all_delivery_from_counterparties.sum(:total_paid) %></td>
            <td><%= @all_delivery_from_counterparties.sum(:total_price) - @all_delivery_from_counterparties.sum(:total_paid) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
