<div class="container my-5">
  <div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title font-weight-bold">
        Приход от поставщиков
        <%= clink_to 'Изменить вид', product_entries_path, 'fa-eye' %>
        <%= clink_to 'Приход от производство', combination_of_local_products_path, 'fa-arrow-right' %>
      </h3>
      <%= link_to 'Добавить новый', new_delivery_from_counterparty_path, class: "btn btn-success min-width-btn" %>
    </div>

    <div class="card-body">
      <table class="table table-hover table-bordered table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Итого цена</th>
            <th>Оплачено</th>
            <th>тип оплаты</th>
            <th>Коммент</th>
            <th>Поставщик</th>
            <th>Создано в</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @delivery_from_counterparties.each do |delivery_from_counterparty| %>
            <tr>
              <td><%= delivery_from_counterparty.id %></td>
              <td><%= number_to_currency(delivery_from_counterparty.total_price) %></td>
              <td><%= number_to_currency(delivery_from_counterparty.total_paid) %></td>
              <td><%= delivery_from_counterparty.payment_type %></td>
              <td><%= delivery_from_counterparty.comment %></td>
              <td><%= delivery_from_counterparty.provider.name %></td>
              <td><%= strf_datetime(delivery_from_counterparty.created_at) %></td>
              <td><%= clink_to 'Посмотреть', delivery_from_counterparty_path(delivery_from_counterparty), 'fa-search' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @delivery_from_counterparties %>
    </div>
  </div>
</div>
