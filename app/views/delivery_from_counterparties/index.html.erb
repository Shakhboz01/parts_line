<div class="container my-5">
  <div class="card shadow-lg">
    <%= render 'filter_form', q: @q, url: request.path %>
    <div class="card-body">
      <%= render 'delivery_from_counterparties', delivery_from_counterparties: @delivery_from_counterparties %>
      <%= paginate @delivery_from_counterparties %>
      <table class='table-bordered'>
        <thead>
          <tr>
            <th></th>
            <th>Итого цена</th>
            <th>Итого оплачено</th>
            <th>Разница</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>В долларах </th>
            <td><%= number_to_currency @all_delivery_from_counterparties.price_in_usd.sum(:total_price) %></td>
            <td><%= number_to_currency @all_delivery_from_counterparties.price_in_usd.sum(:total_paid) %></td>
            <td><%= number_to_currency(@all_delivery_from_counterparties.price_in_usd.sum(:total_price) - @all_delivery_from_counterparties.price_in_usd.sum(:total_paid)) %></td>
          </tr>
          <tr>
            <th>В сумах </th>
            <td><%= num_to_usd(@all_delivery_from_counterparties.price_in_uzs.sum(:total_price)) %></td>
            <td><%= num_to_usd @all_delivery_from_counterparties.price_in_uzs.sum(:total_paid) %></td>
            <td><%= num_to_usd(@all_delivery_from_counterparties.price_in_uzs.sum(:total_price) - @all_delivery_from_counterparties.price_in_uzs.sum(:total_paid)) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
