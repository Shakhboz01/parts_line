<%= simple_form_for(local_service) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :price, label: 'Цена в $' %>
    <%= f.input :comment ,label: 'Комментарие', input_html: {placeholder: 'не обязательно'} %>
    <%= f.association :sale_from_local_service, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Завершить' %>
  </div>
<% end %>
